    "mocha-sinon": "2.1.0",
    "nyc": "13.1.0",
    "source-map-support": "0.5.10",
    "ts-loader": "5.3.3",
    "ts-node": "8.0.2",
    "tslint": "5.12.1",
    "typescript": "3.3.1"
  },
  "dependencies": {
    "forever": "^0.15.3"
